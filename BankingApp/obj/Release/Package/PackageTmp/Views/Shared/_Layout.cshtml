<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @if (ViewBag.HideNavBar == null || ViewBag.HideNavBar != true)
            {
                @Html.ActionLink("Banking", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Alternar navegación" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 ">
                        <li>@Html.ActionLink("Inversiones", "Index", "INVERSIONs", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Pago de inversiones", "Index", "PAGO_INVERSION", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Fondo de inversión", "Index", "FONDO_INVERSION", new { area = "" }, new { @class = "nav-link" })</li>
                    </ul>
                    <ul class="navbar-nav flex-grow-1">
                        <li>@Html.ActionLink("Prestamo", "Index", "PRESTAMOes", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Pago de prestamos", "Index", "PAGO_PRESTAMO", new { area = "" }, new { @class = "nav-link" })</li>
                    </ul>
                    <ul class="navbar-nav flex-grow-1">
                        <li>@Html.ActionLink("Clientes", "Index", "CLIENTEs", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Usuarios", "Index", "USUARIOs", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Entidad Financiera", "Index", "ENTIDAD_FINANCIERA", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Monedas", "Index", "MONEDAs", new { area = "" }, new { @class = "nav-link" })</li>
                    </ul>
                    <ul class="navbar-nav flex-grow-1">
                        <li>@Html.ActionLink("Exit", "Index", "Login", new { area = "" }, new { @class = "nav-link" })</li>
                    </ul>
                </div>

          }
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
