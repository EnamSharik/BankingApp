@model IEnumerable<BankingApp.Models.FONDO_INVERSION>

@{
        Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Crear Nuevo", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <div class="overflow-auto">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FECHA)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CAPITAL_INVERSIONISTAS)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CAPITAL_PRESTADO)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CAPITAL_DISPONIBLE)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FECHA_CREACION)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MONEDA)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-nowrap">
                        @Html.DisplayFor(modelItem => item.FECHA)
                    </td>
                    <td class="text-nowrap">
                        @Html.DisplayFor(modelItem => item.CAPITAL_INVERSIONISTAS)
                    </td>
                    <td class="text-nowrap">
                        @Html.DisplayFor(modelItem => item.CAPITAL_PRESTADO)
                    </td>
                    <td class="text-nowrap">
                        @Html.DisplayFor(modelItem => item.CAPITAL_DISPONIBLE)
                    </td>
                    <td class="text-nowrap">
                        @Html.DisplayFor(modelItem => item.FECHA_CREACION)
                    </td>
                    <td class="text-nowrap">
                        @Html.DisplayFor(modelItem => item.MONEDA.CODIGO)
                    </td>
                    <td class="text-nowrap">
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID_FONDO }, new { @class = "btn btn-primary" }) 
                        @Html.ActionLink("Details", "Details", new { id = item.ID_FONDO }, new { @class = "btn btn-secondary" }) 
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID_FONDO }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>
</body>
</html>
