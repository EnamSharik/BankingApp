@model IEnumerable<BankingApp.Models.CLIENTE>

@{
        Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Crear Nuevo", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <div class="overflow-auto">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NOMBRE)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.APELLIDO)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NIT)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DPI)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TELEFONO)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EMAIL)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DIRECCION)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FECHA_REGISTRO)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ESTADO)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-nowrap">
                        @Html.DisplayFor(modelItem => item.NOMBRE)
                    </td>
                    <td class="text-nowrap">
                        @Html.DisplayFor(modelItem => item.APELLIDO)
                    </td>
                    <td class="text-nowrap">
                        @Html.DisplayFor(modelItem => item.NIT)
                    </td>
                    <td class="text-nowrap">
                        @Html.DisplayFor(modelItem => item.DPI)
                    </td>
                    <td class="text-nowrap">
                        @Html.DisplayFor(modelItem => item.TELEFONO)
                    </td>
                    <td class="text-nowrap">
                        @Html.DisplayFor(modelItem => item.EMAIL)
                    </td>
                    <td class="text-nowrap">
                        @Html.DisplayFor(modelItem => item.DIRECCION)
                    </td>
                    <td class="text-nowrap">
                        @Html.DisplayFor(modelItem => item.FECHA_REGISTRO)
                    </td>
                    <td class="text-nowrap">
                        @Html.DisplayFor(modelItem => item.ESTADO)
                    </td>
                    <td class="text-nowrap">
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID_CLIENTE }, new { @class = "btn btn-primary" }) 
                        @Html.ActionLink("Details", "Details", new { id = item.ID_CLIENTE }, new { @class = "btn btn-secondary" }) 
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID_CLIENTE }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>
</body>
</html>
